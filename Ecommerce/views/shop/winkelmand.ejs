<%- include('../includes/head.ejs')  %> 
    <link rel="stylesheet" href="../css/winkelmand.css"/>
</head>
<body>
    <%- include('../includes/navbar.ejs')  %> 
    <main>
        <div class="container">
            <div class="top-box">
                <h1>Winkelmand</h1>
            </div>
            <% if (prods.length > 0) { %>
                <% prods.forEach (p => { %>
            <div class="form">
                <div class="top-form">
                    <div class="card">
                        <div class="left">
                            <img src="<%= p.productId.ProductImg %>" alt="">
                        </div>
                        <div class="middel">
                            <p><%= p.productId.ProductNaam %></p>
                            <p><%= p.productId.ProductCategorie %></p>
                            <p>$<%= p.productId.ProductPrijs %></p>
                        </div>
                        <div class="right">
                            <form action="/winkelmand-delete-item" method="POST">
                                <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                            <div class="button">
                                <p><%= p.quantity %></p>
                            </div>
                        </div>
                        <div class="bottom-form">
                            <div class="totaal">
                                <p>Totaal:</p>
                                <p>$17,97</p>
                            </div>
                            <form action="/create-order" method="POST">
                                <button type="submit">Reken af</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
            <% } else { %>
                <h1>Geen producten in uw winkelmand!</h1>
                <% } %>
        </div>
    </main>
    <%- include('../includes/footer.ejs')  %> 