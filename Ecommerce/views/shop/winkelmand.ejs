<%- include('../includes/head.ejs')  %> 
    <link rel="stylesheet" href="../css/winkelmand.css"/>
</head>
<body>
    <%- include('../includes/navbar.ejs')  %> 
    <main>
        <div class="container">
            <div class="top-box">
                <h1>Winkelmand</h1>
            </div>
            <% if (products.length > 0) { %>
                <div class="top-form">
                    <% products.forEach(p => { %>
                    <div class="card">
                        <div class="left">
                            <img src="<%= p.productId.ProductImg %>" alt="">
                        </div>
                        <div class="middel">
                            <p><%= p.productId.ProductNaam %></p>
                            <p><%= p.productId.ProductCategorie %></p>
                            <p>$<%= p.productId.ProductPrijs %></p>
                        </div>
                        <div class="right">
                            <img src="../img/Group 3.png" alt="">
                            <div class="button">
                                <button type="submit" value="1">-</button>
                                <p><%= p.quantity %></p>
                                <button type="submit" value="1">+</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bottom-form">
                    <div class="totaal">
                        <p>Totaal:</p>
                        <p>$17,97</p>
                    </div>
                    <button type="submit">Reken af</button>
                </div>
            </form>
            <% }) %>
            <% } else { %>
                <h1>Geen producten in uw winkelmand!</h1>
                <% } %>
        </div>
    </main>
    <%- include('../includes/footer.ejs')  %> 